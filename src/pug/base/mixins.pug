mixin showcase_item_product(src)
    img(src= src, alt="showcase image")

mixin showcase_item_color( classFas, classDirection, src, content)
    .color_item
    i.fas(class=classFas)(class=classDirection)
    .showcase_item_content
        h4= content
        img(src= src, alt= content)

mixin testominial_content_item(src, content, name, position)
    .testimonial_content_item
        .item_left
            img(src=src, alt="testimonial avatar").item_avatar.img-fluid
        .item_right
            p.item_right_content= content
            .item_right_regency 
                p.item_right_name= name
                p.item_right_position= position

mixin social_content(icon, title)
    li.social_item
        a(href="#")
            .social_item_content
                i.fab(class= icon).social_icon
                p.social_title= title
    li.social_separation
        .social_separation_item

mixin main_bottom_title(title, line, alt)
    h4.title= title
    img(src= line, alt= alt).line

mixin listPath(list)
    ul
        each item in list   
            li(class= item.className)
                a(href="#")= item.located
                i.fal.fa-angle-right(class= item.classIcon)

mixin tableCart(img, num, total)
    tr
        td
            img(src= img, alt="Product image")
        td Lắc tay D&amp;G
        td 345.000
            sup đ
        td
            p= num
        td= total
            sup đ
        td
            i.fas.fa-trash-alt

mixin tableAccount(status, debt)
    tr  
        td 
            p #1006
        td 
            p May 13, 2013
        td
            p.red= status
        td
            p 350.000
                sup đ
        td
            p= debt
                sup đ

mixin accountDetail(icon, content1, content2)
    i.fas(class= icon)
    .Detail__content
        h5= content1
        p= content2

mixin formGroup(label, type, name, idInput)
    .form-group
        label= label 
        br
        input(type= type, name= name, id= idInput)