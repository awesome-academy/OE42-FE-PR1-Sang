mixin showcase_item_product(src)
    img(src= src, alt="showcase image")

mixin showcase_item_color( classFas, classDirection, src, content)
    .color_item
    i.fas(class=classFas)(class=classDirection)
    .showcase_item_content
        h4= content
        img(src= src, alt= content)

mixin testominial_content_item(src, content, name, position)
    .testimonial_content_item
        .item_left
            img(src=src, alt="testimonial avatar").item_avatar.img-fluid
        .item_right
            p.item_right_content= content
            .item_right_regency 
                p.item_right_name= name
                p.item_right_position= position

mixin social_content(icon, title)
    li.social_item
        a(href="#")
            .social_item_content
                i.fab(class= icon).social_icon
                p.social_title= title
    li.social_separation
        .social_separation_item

mixin main_bottom_title(title, line, alt)
    h4.title= title
    img(src= line, alt= alt).line

mixin listPath(list)
    ul
        each item in list   
            li(class= item.className)
                a(href="#")= item.located
                i.fal.fa-angle-right(class= item.classIcon)

mixin tableCart(img, num, total)
    tr
        td
            img(src= img, alt="Product image")
        td Lắc tay D&amp;G
        td 345.000
            sup đ
        td
            p= num
        td= total
            sup đ
        td
            i.fas.fa-trash-alt

mixin tableAccount(status, debt)
    tr  
        td 
            p #1006
        td 
            p May 13, 2013
        td
            p.red= status
        td
            p 350.000
                sup đ
        td
            p= debt
                sup đ

mixin accountDetail(icon, content1, content2)
    i.fas(class= icon)
    .Detail__content
        h5= content1
        p= content2

mixin formGroup(label, type, name, idInput)
    .form-group
        label= label 
        input(type= type, name= name, id= idInput)

mixin blog-item(img, className)
    .blog__content__post__item(class= className).col-12.col-sm-12.col-md-6.col-lg-4
        img(src=img , alt="post image").img-fluid 
        a(href="#")
            h5 REVIEW SON KEM BOURJOIR VELVET
        p Hi, chào các nàng...sau khá nhiều lời hứa hão thì hôm nay tớ quay lại hâm nóng cái Blog này vào một ngày đầu hè nóng oi bức, khi mà dân tính xô nhau đi tắm Free để giải nhiệt.
        span Bởi NamTran (27/05/2015)
        .post__item__btn
            a(href="#") Đọc thêm
                i.fas.fa-angle-right
            a(href="#") 23 Bình Luận

mixin pagination
    .pagination
        .pagination__option
            .pagination__option__grid
                i.fas.fa-th-large
            .pagination__option__list
                i.fas.fa-list
        .pagination__num
            i.fas.fa-caret-left
            span.active 1
            span 2
            span 3
            i.fas.fa-caret-right